source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.5'
gem 'haml-rails'
gem 'turbolinks'

# Database
gem 'pg'

# External Components
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass', '~> 3.3.6'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'

# Configuration
gem 'figaro'

# Security
gem 'bcrypt', '~> 3.1.7'

# Services
gem 'unicorn'

group :doc do
  gem 'sdoc', '~> 0.4.0', group: :doc
end

group :development, :test do
  gem 'byebug'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'guard-rubocop'
  gem 'haml-lint'
  gem 'parallel_tests'
  gem 'rspec'
  gem 'rspec-activemodel-mocks'
  gem 'rspec-rails'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'letter_opener'
  gem 'better_errors'  
end

group :test do
  gem 'codeclimate-test-reporter'
  gem 'capybara'
  gem 'poltergeist'  
end

